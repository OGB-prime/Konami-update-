<script>
// -------------------------
// JSON Data (All news here)
// -------------------------
const newsData = [
  {
    "title": "eFootball 2026 v5.2.2 Patch Released",
    "date": "2026-01-08",
    "summary": "The latest patch update introduces bug fixes, stability improvements, and Treasure Link preparations.",
    "link": "https://gamingonphone.com/news/efootball-2026-v5-2-2-update-explained/",
    "image": "https://gamingonphone.com/wp-content/uploads/2026/01/efootball26-patch.jpg"
  },
  {
    "title": "Treasure Link Jan ’26 Event Begins",
    "date": "2026-01-08",
    "summary": "The Treasure Link campaign for January is active with rewards and objectives running through Jan 22.",
    "link": "https://gamingonphone.com/news/efootball-2026-treasure-link-jan-26-whats-new-and-all-rewards-explained/",
    "image": "https://gamingonphone.com/wp-content/uploads/2026/01/treasure-link-jan26.jpg"
  },
  {
    "title": "eFootball Update Details: Link‑Up Epics",
    "date": "2026-01-08",
    "summary": "Patch v5.2.2 includes new Link‑Up playstyle features and returning events.",
    "link": "https://gamingonphone.com/news/efootball-2026-v5-2-2-update-explained/",
    "image": "https://gamingonphone.com/wp-content/uploads/2026/01/link-up-epics.jpg"
  }
];

// -------------------------
// Render news dynamically
// -------------------------
const container = document.getElementById("news");
container.innerHTML = "";

const today = new Date().toISOString().slice(0,10); // YYYY-MM-DD

// Sort newest first
newsData.sort((a,b)=> new Date(b.date) - new Date(a.date));

newsData.forEach(item => {
  const isToday = item.date === today ? `<span class="today-badge">TODAY</span>` : '';
  container.innerHTML += `
    <div class="news-card">
      <img src="${item.image}" alt="News Image">
      <div class="news-content">
        <div class="news-title">${item.title} ${isToday}</div>
        <div class="news-date">${item.date}</div>
        <div class="news-summary">${item.summary}</div>
        <a class="news-link" href="${item.link}" target="_blank">Read more →</a>
      </div>
    </div>
  `;
});
</script>

